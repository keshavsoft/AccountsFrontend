<tr>
    <th data-field="KS-Serial" data-formatter="window.GlobalSerialFormatter">#</th>

    {{#each columns}}
    <th data-field="{{field}}" {{#if align}}data-align="{{align}}" {{/if}} {{#if
        filterControl}}data-filter-control="{{filterControl}}" {{/if}} {{#if (isVisible this)}}
        data-visible={{visible}}{{/if}} {{#if showRupee}}data-formatter="window.RupeeFormatter" {{/if}}>
        {{title}}
    </th>
    {{/each}}
    <th data-field="KS-Alter" data-formatter="window.GlobalAlterFormatter">
        Options
    </th>
</tr>

<script>
    window.GlobalSerialFormatter = (value, row, index) => {
        return index + 1;
    };

    window.GlobalAlterFormatter = (value, row, index) => {
        return [
            `<a href="#" class="link btn" title="Edit">`,
            `<i class="bi bi-pencil-square text-danger"></i>`,
            `</a>`

        ].join('');
    };
    window.RupeeFormatter = (value) => {
        if (value === null || value === undefined || value === '') return '';
        return `â‚¹ ${parseFloat(value).toFixed(2)}`;
    };
</script>